<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!-- Criando tabela de CartÃµes -->
    <changeSet id="1" author="Rafael Teixeira">
        <createTable schemaName="fiappay" tableName="tb_cartoes">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tx_numero" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>
            <column name="tx_cvv" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="tx_data_validade" type="VARCHAR(5)">
                <constraints nullable="false"/>
            </column>
            <column name="vl_limite" type="double">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
