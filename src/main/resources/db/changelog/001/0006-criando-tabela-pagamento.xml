<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!-- Criando tabela de CartÃµes -->
    <changeSet id="1" author="Rafael Teixeira">
        <createTable schemaName="fiappay" tableName="tb_pagamentos">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="id_cartao" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="id_cliente" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="vl_compra" type="java.math.BigDecimal">
                <constraints nullable="false" />
            </column>
            <column name="dthr_compra" type="datetime">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="id_cliente"
                                 baseTableName="tb_pagamentos"
                                 baseTableSchemaName="fiappay"
                                 constraintName="FK_TB_PAGAMENTOS_CLIENTE"
                                 referencedColumnNames="id"
                                 referencedTableName="tb_clientes"
                                 referencedTableSchemaName="fiappay"/>

        <addForeignKeyConstraint baseColumnNames="id_cartao"
                                 baseTableName="tb_pagamentos"
                                 baseTableSchemaName="fiappay"
                                 constraintName="FK_TB_PAGAMENTOS_CARTAO"
                                 referencedColumnNames="id"
                                 referencedTableName="tb_cartoes"
                                 referencedTableSchemaName="fiappay"/>

    </changeSet>
</databaseChangeLog>
